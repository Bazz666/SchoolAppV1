<%= form_with(model: assessment, local: true) do |form| %>
  <% if assessment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(assessment.errors.count, "error") %> prohibited this assessment from being saved:</h2>

      <ul>
      <% assessment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :grade %>
    <%= form.number_field :grade %>
  </div>

  <div class="field">
    <%= form.label :course_id %>
    <%= form.collection_select(:course_id ,Course.all, :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <table>
      <%= form.collection_check_boxes(:user_id, User.all, :id, :name ) do |b| %>
        <tr>
          <td>
            <%= b.label class:"label-checkbox pt-2" do %>
              <%= b.check_box + '&nbsp;'.html_safe + b.text%>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>

  <div class="field">
    <%= form.label :departament_id %>
    <%= form.collection_select(:departament_id ,Departament.all, :id, :name) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
