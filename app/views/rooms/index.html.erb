<p id="notice"><%= notice %></p>


<div class="container-fluid">
  <div class="row">
    <div class="col-3">
      <% @rooms.each do |room| %>
        <%= link_to room do %>
          <div class="card">
            <div class="card-body">
              <%= room.name %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-9">
        <%= render 'messages/index' %>
    </div>
  </div>
</div>

