<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field" id="users_courses_departaments">
    <div class= "field">
        <%= form.label :users %>
        <%= form.collection_check_boxes(:user_ids, @user, :id, :name ) do |a| %>
                <%= a.label do %>
                        <%= a.check_box +  a.text %>
                <% end%>
        <% end%>
    </div>
  </div>

  <div class="field">
    <div>
      <%= form.fields_for :users_courses_departaments do |ff| %>
        <%= ff.label :name %>
        <%= ff.text_field :name %>
      <% end %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
